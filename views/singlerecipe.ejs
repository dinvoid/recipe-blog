

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe</title>
</head>
<body>
    
<div class="card card-body mt-2"> 
             <h2><%= recipes.recipename %></h2>
             <ul class="list-unstyled">
               <li class="mb-2"><strong>Prep Time:</strong><%= recipes.preptime %></li>
               <li class="mb-2"><strong>Cook Time:</strong><%= recipes.cooktime %></li>
               <li class="mb-2"><strong>Servings:</strong><%= recipes.serving %></li>
               <li class="mb-2"><strong>Difficulty:</strong><%= recipes.difficulty%></li>
             </ul>
             <p>
               <%= recipes.description %>
             </p>
             <% if (recipes.ingredients && recipes.ingredients.length > 0) { %>
               <h3 class="mb-4">Ingredients:</h3>
               <ul>
                 <% for (var j = 0; j < recipes.ingredients.length; j++) { %>
                   <li><%= recipes.ingredients[j] %></li>
                 <% } %>
               </ul>
             <% } else { %>
               <p>Ingredients not available</p>
             <% } %>

             <% if (recipes.instructions && recipes.instructions.length > 0) { %>
               <h3 class="mb-4">Instructions:</h3>
               <Ol>
                 <% for (var j = 0; j < recipes.instructions.length; j++) { %>
                   <li><%= recipes.instructions[j] %></li>
                 <% } %>
               </Ol>
             <% } else { %>
               <p>Instructions not available</p>
             <% } %>
</div>
</body>
</html>